{
    "Version": "2012-10-17",
    "Id": "javahome-alb-pilicy",
    "Statement": [
        {
            "Sid": "root-access",
            "Effect": "Allow",
            "Principal": {
                "AWS": "arn:aws:iam::127311923021:root"
            },
            "Action": "s3:PutObject",
            "Resource": "arn:aws:s3:::${access_logs_bucket}/AWSLogs/288621183532/*"
        },
        {
            "Sid": "log-delivery",
            "Effect": "Allow",
            "Principal": {
                "Service": "delivery.logs.amazonaws.com"
            },
            "Action": "s3:PutObject",
            "Resource": "arn:aws:s3:::${access_logs_bucket}/AWSLogs/288621183532/*",
            "Condition": {
                "StringEquals": {
                    "s3:x-amz-acl": "bucket-owner-full-control"
                }
            }
        },
        {
            "Sid": "log-delivery-access-check",
            "Effect": "Allow",
            "Principal": {
                "Service": "delivery.logs.amazonaws.com"
            },
            "Action": "s3:GetBucketAcl",
            "Resource": "arn:aws:s3:::${access_logs_bucket}"
        }
    ]
}
